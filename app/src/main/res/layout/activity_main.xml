<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/lectura"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="35dp"
        android:textAlignment="center"
        android:text="¿Quieres ver tú Suerte?"
        android:textColor="#ffa726"
        android:textSize="35sp"
        android:fontFamily="@font/mrsmonsterital"
        />

    <EditText
        android:id="@+id/question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="41dp"
        android:hint="HAZ UNA PREGUNTA"
        android:inputType="textShortMessage"
        android:textSize="24sp"
        android:fontFamily="@font/inmortal"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:fontFamily="@font/mrsmonsterital"
        android:text="TOCA LA ESFERA Y VERÁS"
        android:textColor="#9e9e9e"
        android:textSize="25sp"
        />

    <ImageButton
        android:id="@+id/btn"
        android:layout_width="245dp"
        android:layout_height="280dp"
        android:layout_gravity="center"
        android:layout_margin="2dp"
        android:background="@color/cardview_shadow_end_color"
        android:scaleType="fitXY"
        android:src="@drawable/suerte" />

    <TextView
        android:id="@+id/respuestavista"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:layout_margin="10dp"
        android:textColor="#00ff80"
        android:textSize="20sp"
        android:fontFamily="@font/bradbunr"
        />

</LinearLayout>